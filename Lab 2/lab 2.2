number = 15

if number % 3 == 0 and number % 5 == 0:
    print("chislo delitsya na 3 i 5")
elif number % 3 == 0:
    print("Chislo delitsya na 3")
elif number % 5 == 0:
    print("Chislo delitsya na 5")
else:
    print("Cislo ne delitsya na 3 i 5")

